# Core settings
BOND_ASSETS_PATH=assets

# LLMs (choose one provider configuration below)
BOND_EXPANSION_LLM=openai/gpt-4o-mini
BOND_DISAMBIGUATION_LLM=openai/gpt-4o-mini

# Embeddings (must match FAISS signature)
BOND_EMBED_MODEL=ollama/rajdeopankaj/bond-embed-v1-fp16:latest
BOND_EMB_BATCH=16

# Providers (set the ones you use)
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
OLLAMA_API_BASE=http://localhost:11434

# API security
# Set BOND_API_KEY to enable auth; or allow anonymous for dev only
# BOND_API_KEY=
BOND_ALLOW_ANON=1

# Retrieval (optional tuning)
BOND_TOPK_EXACT=5
BOND_TOPK_BM25=20
BOND_TOPK_DENSE=50
BOND_TOPK_FINAL=10
BOND_RRF_K=60.0
BOND_EXPANSION=1
BOND_N_EXPANSIONS=3
